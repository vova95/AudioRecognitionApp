@model AudioRecognitionApp.BLL.DTO.BaseInformationDTO
@{
    ViewBag.Title = "Index";
}
<div class="admin-container">
    <div class="create-container">
        @Html.ActionLink("Create", "Create", null, new { @class = "btn btn-warning" })
    </div>
    <div class="result-container">
        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
            </tr>
            </thead>
            <tbody>
            @if (Model != null)
            {
                foreach (var song in Model.Songs)
                {
                    <tr>

                        <td>@song.RowNumber</td>
                        <td>@song.Name</td>
                        <td style="float: right">@Html.ActionLink("Edit", "Edit", "Admin", new {id = song.Id}, new {@class = "btn btn-warning"})
                            @Html.ActionLink("Delete", "Delete", "Admin", new {id = song.Id}, new {@class = "btn btn-warning"})</td>
                    </tr>
                }
            }

            </tbody>
        </table>
    </div>
    <div class="pagination-container">
        <ul class="pagination">
            @for (int i = 0; i < Model.NumberOfPages; i++)
            {
                <li>@Html.ActionLink((i + 1).ToString(), "paginate", "admin", new { page = i + 1 }, null)</li>
            }

        </ul>
    </div>
</div>